---
import Layout from '../layouts/Layout.astro';
import SpaceParticles from '../components/SpaceParticles';
import HeroSection from '../components/HeroSection';
import ActSection from '../components/ActSection';
import TrajectorySection from '../components/TrajectorySection';
import CharacterGallery from '../components/CharacterGallery';
import TestimonialsSection from '../components/TestimonialsSection';
import CountdownSection from '../components/CountdownSection';
import StickyPreOrder from '../components/StickyPreOrder';
import SocialShare from '../components/SocialShare';
import Footer from '../components/Footer';
---

<Layout title="We Do Not Come In Peace - The Oumuamua Protocol">
  <!-- 3D Particle Background -->
  <SpaceParticles client:load />
  
  <!-- Sticky Pre-Order Button -->
  <StickyPreOrder client:load />
  
  <!-- Hero Section -->
  <HeroSection client:load />
  
  <!-- Countdown Section -->
  <CountdownSection client:load />
  
  <!-- Act I -->
  <ActSection
    client:visible
    actNumber={1}
    title="The Sentry"
    subtitle="The Detection"
    yearRange="2017-2019"
    description="Our story begins when 'Oumuamua passes through our solar system. While astronomers debate its unusual properties, the object is actually an ancient sentry with a clear set of instructions..."
    theme="detection"
  />
  
  <!-- Trajectory Data Section -->
  <TrajectorySection client:visible />
  
  <!-- Testimonials Section -->
  <TestimonialsSection client:visible />
  
  <!-- Act II -->
  <ActSection
    client:visible
    actNumber={2}
    title="The Cartographer"
    subtitle="The Test"
    yearRange="2019-2023"
    description="In 2019, interstellar object 2I/Borisov arrives just months before a mysterious viral outbreak emerges from a Chinese biolab. Coincidence? Unknown to most of humanity, the second phase of the assessment is already well underway..."
    theme="assessment"
  />
  
  <!-- Act III -->
  <ActSection
    client:visible
    actNumber={3}
    title="A11pI3Z"
    subtitle="The Mop-Up Crew"
    yearRange="2024-2025"
    description="The third object arrives - massive, obviously artificial, and taking position at the edge of our solar system. This is the enforcement arm. Humanity's days are numbered..."
    theme="reckoning"
  />
  
  <!-- Character Gallery -->
  <CharacterGallery client:visible />
  
  <!-- Social Share -->
  <SocialShare client:visible />
  
  <!-- Footer -->
  <Footer client:load />
</Layout>