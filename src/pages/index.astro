---
import Layout from '../layouts/Layout.astro';
import SpaceParticles from '../components/SpaceParticles';
import HeroSection from '../components/HeroSection';
import ActSection from '../components/ActSection';
import TrajectorySection from '../components/TrajectorySection';
import CharacterGallery from '../components/CharacterGallery';
import BookPromotion from '../components/BookPromotion';
---

<Layout title="We Do Not Come In Peace - The Oumuamua Protocol">
  <!-- 3D Particle Background -->
  <SpaceParticles client:load />
  
  <!-- Hero Section -->
  <HeroSection client:load />
  
  <!-- Act I -->
  <ActSection
    client:visible
    actNumber={1}
    title="The Sentry"
    subtitle="The Detection"
    yearRange="2017-2019"
    description="Our story begins when 'Oumuamua passes through our solar system. While astronomers debate its unusual properties, the object is actually an ancient sentry with a clear set of instructions..."
    theme="detection"
  />
  
  <!-- Trajectory Data Section -->
  <TrajectorySection client:visible />
  
  <!-- Act II -->
  <ActSection
    client:visible
    actNumber={2}
    title="The Cartographer"
    subtitle="The Test"
    yearRange="2019-2023"
    description="The arrival of the second interstellar object and the pandemic were not coincidental. Learn more about a first probing attack..."
    theme="assessment"
  />
  
  <!-- Act III -->
  <ActSection
    client:visible
    actNumber={3}
    title="A11pI3Z"
    subtitle="The Mop-Up Crew"
    yearRange="2024-2025"
    description="The third object arrives - massive, obviously artificial, and taking position at the edge of our solar system. This is the enforcement arm. Humanity's days are numbered..."
    theme="reckoning"
  />
  
  <!-- Character Gallery -->
  <CharacterGallery client:visible />
  
  <!-- Book Promotion Section -->
  <BookPromotion client:visible />
  
  <!-- Footer/Call to Action -->
  <section className="py-16 px-4 text-center relative overflow-hidden bg-[rgb(var(--color-deep-space))]">
    <div className="max-w-4xl mx-auto relative z-10">
      <h2 className="font-orbitron font-black text-2xl md:text-4xl mb-4 glow-text-danger">
        <span className="text-gradient-danger">The Assessment Continues</span>
      </h2>
      <p className="text-base text-[rgb(var(--color-starlight)/0.8)] mb-8 leading-relaxed max-w-2xl mx-auto">
        Humanity has been granted probationary status. The enforcement object has withdrawn, 
        but monitoring continues. Will we evolve, or will we fail?
      </p>
      
      <div className="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <button className="holographic px-6 py-3 rounded-lg font-space-mono text-sm uppercase tracking-wider transition-all hover:scale-105 hover:shadow-[0_0_30px_rgba(0,255,127,0.5)]">
          <span className="relative z-10">Newsletter</span>
        </button>
        <button className="alien-border px-6 py-3 rounded-lg font-space-mono text-sm uppercase tracking-wider bg-[rgb(var(--color-deep-space)/0.8)] transition-all hover:bg-[rgb(var(--color-deep-space))] hover:shadow-[0_0_20px_rgba(0,229,255,0.3)]">
          Contact Author
        </button>
      </div>
    </div>
    
    <!-- Final warning -->
    <div className="absolute bottom-0 left-0 right-0 h-10 bg-gradient-to-t from-[rgb(var(--color-warning-red)/0.1)] to-transparent animate-pulse" />
  </section>
</Layout>